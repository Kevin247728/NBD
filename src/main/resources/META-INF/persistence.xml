<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="TEST_RENT_BOOKS" transaction-type="RESOURCE_LOCAL">
    <class>org.example.models.Book</class>
    <class>org.example.models.Client</class>
    <class>org.example.models.ClientType</class>
    <class>org.example.models.NonStudent</class>
    <class>org.example.models.Rent</class>
    <class>org.example.models.Student</class>
    <class>org.example.models.AbstractEntity</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/RentDB" />
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="jakarta.persistence.jdbc.user" value="root" />
      <property name="jakarta.persistence.jdbc.password" value="db" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
      <property name="exclude-unlisted-classes" value="true" />
      <property name="validation-mode" value="AUTO" />
      <property name="hibernate.connection.isolation" value="2" />
    </properties>

  </persistence-unit>
</persistence>
