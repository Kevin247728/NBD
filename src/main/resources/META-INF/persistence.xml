<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="TEST_RENT_BOOKS" transaction-type="RESOURCE_LOCAL">
    <class>org.example.models.Author</class>
    <class>org.example.models.Book</class>
    <class>org.example.models.Client</class>
    <class>org.example.models.ClientType</class>
    <class>org.example.models.NonStudent</class>
    <class>org.example.models.Rent</class>
    <class>org.example.models.Student</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:memory:target/RentDB;create=true" />
      <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.iapi.jdbc.AutoloadedDriver" />
      <property name="jakarta.persistence.jdbc.user" value="root" />
      <property name="jakarta.persistence.jdbc.password" value="db" />
      <property name="hibernate.cache.use_second_level_cache" value="true" />
      <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory" />
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
      <property name="exclude-unlisted-classes" value="true" />
      <property name="validation-mode" value="AUTO" />
    </properties>

  </persistence-unit>
</persistence>
